<% include ./partials/header %>
        
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <h1 class="text-center">ToDo List</h1>
                    <form action="/todo" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="name" placeholder="Add Todo" required>
                            <input class="form-control" type="text" name="description" placeholder="Add Description">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-success btn-block">Add</button>
                        </div>
                    </form>
            
                    <div class="row">
                        <% todos.forEach(function(todo){ %>
                            <li class="list-group-item">
                                <span>
                                    <a class="btn btn-xs btn-default pull-right" href="/todo/<%= todo._id %>"><i class="fa fa-comments" aria-hidden="true"></i></a>
                                    <a class="btn btn-xs btn-default pull-right" href="/todo/<%= todo._id %>/edit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                    <form class="pull-right" id="delete" action="/todo/<%= todo._id %>?_method=DELETE" method="POST">
                                        <button class="btn btn-xs btn-default"><i class="fa fa-trash" aria-hidden="true"></i></button>
                                    </form>
                                </span>
                                <%= todo.name %>
                            </li>
                        <% }); %>
                    </div>
                    
                    </br>
                    </br>
                    </br>
                    
                    <div class="row">
                        <p class="text-center"><strong>Stack: </strong></br>Html, CSS, Bootstrap, jQuery, JavaScript, express, mongoDB, nodeJS, Mongoose, Body-Parser, RESTful Routes, Method-Override, Express-Sanitizer</p>
                    </div>
                </div>
            </div>
        </div>
        
<% include ./partials/footer %>
    
    